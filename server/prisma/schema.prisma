generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id       Int    @id @default(autoincrement())
  name     String @unique
  price    Int
  quantity Int

  imgUrl String @default("../../client/src/images/blackSquare.png")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model CartProduct {
  id       Int    @id @default(autoincrement())
  name     String @unique
  price    Int
  quantity Int

  imgUrl String @default("../../client/src/images/blackSquare.png")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
